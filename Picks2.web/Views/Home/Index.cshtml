<div class="row">
    <div class="col col-sm-12">
        <form asp-action="Index" asp-controller="Home">
            <div class="input-group">
                <select class="custom-select" asp-for="CategoryId">
                    <option selected disabled>Sök på kategorier</option>
                    <option value="0">Alla</option>
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
                <div>
                    <button class="btn btn-outline-secondary" type="submit">Sök</button>
                </div>
            </div>
        </form>
    </div>
</div>
<p class="alert alert-danger">@ViewData["TheName"]</p>
<br />
<div class="row">
    <div class="card-columns">
        @foreach (var img in Model.Images)
        {
            <div class="card">
                <img class="card-img-top" src="@img.Path" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@img.Name</h5>
                    <p class="card-text"><small class="text-muted">Skapad: @img.DisplayDate</small></p>
                    <a href="@img.Path" download="@img.Name" class="col col-sm-6">
                        <button class="btn btn-primary">Ladda ner</button>
                    </a>
                    <a asp-action="AddToCart" asp-controller="Cart" asp-route-imgId="@img.Id" class="col col-sm-6">
                        <button class="btn btn-success">Lägg i korg</button>
                    </a>
                </div>
            </div>
        }
    </div>
</div>
